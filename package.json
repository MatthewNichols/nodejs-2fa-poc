{
  "name": "nodejs-2fa-poc",
  "version": "1.0.0",
  "description": "Node.js 2FA POC with Passport.js, TOTP, and SMS verification",
  "private": true,
  "scripts": {
    "install:all": "npm install && cd src/back-end && npm install && cd ../front-end && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd src/back-end && npm run dev",
    "dev:frontend": "cd src/front-end && npm run dev",
    "db:generate": "cd src/back-end && npm run db:generate",
    "db:migrate": "cd src/back-end && npm run db:migrate",
    "db:push": "cd src/back-end && npm run db:push",
    "db:studio": "cd src/back-end && npm run db:studio",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd src/back-end && npm run build",
    "build:frontend": "cd src/front-end && npm run build"
  },
  "keywords": [
    "2fa",
    "authentication",
    "passport",
    "totp",
    "sms",
    "nodejs",
    "vue"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
